<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/list_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/lato"
                android:text="11 February 2018"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/list_event_time"
                android:layout_below="@+id/list_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/lato"
                android:text="21:00 WIB"
                android:textSize="12sp"/>

            <RelativeLayout
                android:id="@+id/box_home_away"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/list_event_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/list_event_home_badge"
                        android:layout_width="@dimen/badge_size"
                        android:layout_height="@dimen/badge_size"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/badge_dumm" />

                    <TextView
                        android:id="@+id/list_event_home_name"
                        android:layout_below="@+id/list_event_home_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:layout_centerHorizontal="true"
                        android:text="PERSIB"
                        android:layout_marginTop="@dimen/margin"
                        android:textSize="@dimen/text_sub"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:id="@+id/list_event_away_badge"
                        android:layout_width="@dimen/badge_size"
                        android:layout_height="@dimen/badge_size"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/badge_dumm" />

                    <TextView
                        android:id="@+id/list_event_away_name"
                        android:layout_below="@+id/list_event_away_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="AREMA MALANG"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin"
                        android:textSize="@dimen/text_sub"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/list_event_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="3:1"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/list_event_time_status"
                    android:layout_below="@+id/list_event_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="FULL TIME"
                    android:fontFamily="@font/lato"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/text_sub"/>




            </RelativeLayout>



        </RelativeLayout>




    </android.support.v7.widget.CardView>






</RelativeLayout>