<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.club.ClubDetailActivity">


    <ImageView
        android:id="@+id/iv_club_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo_persib"
        android:layout_margin="@dimen/margin"/>

    <TextView
        android:id="@+id/tv_club_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_club_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/dumm_club_title"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_club_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_club_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin"
        android:fontFamily="@font/roboto"
        android:text="@string/dumm_club_desc"
        android:textSize="18sp" />


</RelativeLayout>